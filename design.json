{
  "designSystem": {
    "metadata": {
      "name": "САХXOPC Solar Energy Design System",
      "version": "1.0",
      "purpose": "Technical-commercial proposal design language for renewable energy projects",
      "primaryContext": "Corporate presentation materials, technical proposals, energy sector communications"
    },
    "colorPalette": {
      "primary": {
        "green": {
          "main": "#009639",
          "description": "Primary brand color - used for accent blocks, primary CTAs, brand elements",
          "usage": [
            "accent blocks background",
            "primary button backgrounds",
            "brand logo elements",
            "decorative geometric shapes"
          ],
          "doNotUse": ["body text", "icon fills", "card backgrounds", "borders"]
        },
        "darkGray": {
          "main": "#2B2B2B",
          "description": "Primary text color and dark UI elements",
          "usage": [
            "heading text",
            "body text",
            "dark header backgrounds",
            "navigation bars"
          ],
          "doNotUse": [
            "button backgrounds",
            "hover states",
            "gradient overlays"
          ]
        }
      },
      "neutral": {
        "white": {
          "main": "#FFFFFF",
          "description": "Primary background and card surface color",
          "usage": [
            "page backgrounds",
            "card surfaces",
            "text on dark backgrounds",
            "content containers"
          ],
          "doNotUse": ["standalone borders", "text on light backgrounds"]
        },
        "lightGray": {
          "background": "#F5F5F5",
          "description": "Subtle background variation",
          "usage": ["page backgrounds", "section dividers", "inactive states"],
          "doNotUse": ["text", "borders", "shadows"]
        }
      },
      "gradients": {
        "cardOverlay": {
          "type": "linear",
          "direction": "to right",
          "stops": [
            {
              "color": "rgba(255, 255, 255, 0.95)",
              "position": "0%",
              "description": "Near-opaque white at start"
            },
            {
              "color": "rgba(255, 255, 255, 0.75)",
              "position": "100%",
              "description": "Semi-transparent white at end"
            }
          ],
          "appliedTo": [
            "content card overlays on photo backgrounds",
            "text container backgrounds over images"
          ],
          "doNotUse": [
            "buttons",
            "icons",
            "standalone cards without photos",
            "navigation elements"
          ]
        },
        "accentBlock": {
          "type": "solid-with-transparency",
          "baseColor": "#009639",
          "opacity": 1.0,
          "appliedTo": [
            "decorative vertical bars",
            "accent geometric shapes",
            "divider elements"
          ],
          "doNotUse": [
            "text backgrounds",
            "button fills",
            "image overlays",
            "card backgrounds"
          ]
        }
      },
      "shadows": {
        "card": {
          "elevation": "medium",
          "value": "0 4px 16px rgba(0, 0, 0, 0.08)",
          "appliedTo": [
            "main content cards",
            "floating content containers",
            "modal overlays"
          ],
          "doNotUse": ["icons", "text elements", "buttons", "decorative shapes"]
        },
        "subtle": {
          "elevation": "low",
          "value": "0 2px 8px rgba(0, 0, 0, 0.05)",
          "appliedTo": ["secondary cards", "nested containers", "input fields"],
          "doNotUse": ["hero sections", "navigation", "inline elements"]
        }
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": {
          "name": "Sans-serif system stack",
          "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "usage": "All text content",
          "characterSet": "Cyrillic, Latin"
        }
      },
      "hierarchy": {
        "h1": {
          "fontSize": "36px",
          "fontWeight": 700,
          "lineHeight": 1.2,
          "color": "#2B2B2B",
          "letterSpacing": "-0.5px",
          "usage": ["main page titles", "proposal headlines"],
          "context": "Used for primary messaging on hero sections"
        },
        "h2": {
          "fontSize": "28px",
          "fontWeight": 700,
          "lineHeight": 1.3,
          "color": "#2B2B2B",
          "letterSpacing": "-0.3px",
          "usage": ["section headings", "major content blocks"],
          "context": "Primary content headings within cards"
        },
        "h3": {
          "fontSize": "20px",
          "fontWeight": 600,
          "lineHeight": 1.4,
          "color": "#2B2B2B",
          "usage": ["subsection titles", "card headers"],
          "context": "Secondary level headings"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": 400,
          "lineHeight": 1.6,
          "color": "#2B2B2B",
          "usage": ["paragraph text", "descriptions", "general content"],
          "context": "Default text for all body content"
        },
        "caption": {
          "fontSize": "14px",
          "fontWeight": 400,
          "lineHeight": 1.5,
          "color": "#666666",
          "usage": ["metadata", "supporting text", "labels"],
          "context": "Secondary information, footnotes"
        }
      },
      "textTreatment": {
        "onDarkBackground": {
          "color": "#FFFFFF",
          "minContrast": "4.5:1",
          "appliedTo": [
            "text over dark headers",
            "text over photos with dark overlays"
          ]
        },
        "onLightBackground": {
          "color": "#2B2B2B",
          "minContrast": "7:1",
          "appliedTo": ["text on white cards", "text on light gray backgrounds"]
        },
        "quotes": {
          "style": "double quotes «»",
          "usage": "Company names, titles in Cyrillic text"
        }
      }
    },
    "spacing": {
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px",
        "xxxl": "64px"
      },
      "componentSpacing": {
        "cardPadding": {
          "internal": "32px",
          "description": "Padding inside content cards",
          "appliedTo": [
            "text content areas within cards",
            "button containers inside cards"
          ]
        },
        "sectionGap": {
          "vertical": "48px",
          "description": "Space between major content sections",
          "appliedTo": ["section breaks", "content block separations"]
        },
        "elementGap": {
          "vertical": "16px",
          "description": "Space between related elements",
          "appliedTo": [
            "heading to body text",
            "paragraph spacing",
            "list items"
          ]
        }
      }
    },
    "components": {
      "card": {
        "hero": {
          "structure": "Photo background with gradient overlay + content container",
          "background": {
            "type": "image",
            "overlay": "linear-gradient(to right, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.75) 100%)",
            "overlayAppliedTo": "Left portion of card where text content sits",
            "overlayWidth": "approximately 60% of card width"
          },
          "contentArea": {
            "background": "transparent (relies on gradient overlay)",
            "padding": "32px",
            "maxWidth": "55%",
            "alignment": "left"
          },
          "shadow": "0 4px 16px rgba(0, 0, 0, 0.08)",
          "borderRadius": "12px",
          "states": {
            "default": "Full shadow, crisp edges",
            "hover": "shadow: 0 6px 20px rgba(0, 0, 0, 0.12), subtle scale: 1.01, transition: all 0.3s ease"
          },
          "doNotApply": {
            "gradientToEntireCard": "Gradient only on left content area, NOT full card background",
            "shadowToImage": "Shadow on card container, NOT on image element itself",
            "greenAccentToCard": "Green accent is separate decorative element, NOT part of card"
          }
        },
        "standard": {
          "background": "#FFFFFF",
          "border": "none",
          "borderRadius": "8px",
          "shadow": "0 2px 8px rgba(0, 0, 0, 0.05)",
          "padding": "24px",
          "states": {
            "default": "White background, subtle shadow",
            "hover": "shadow: 0 4px 12px rgba(0, 0, 0, 0.08), transition: 0.2s ease"
          }
        }
      },
      "decorativeElements": {
        "accentBar": {
          "type": "Vertical geometric bar",
          "background": "#009639",
          "width": "variable (typically 40-80px)",
          "height": "variable (follows card height or specific height)",
          "borderRadius": "8px",
          "position": "Adjacent to content cards, between overlay and main image",
          "usage": [
            "Visual separator",
            "Brand accent element",
            "Composition balance"
          ],
          "doNotUse": [
            "As border for cards",
            "As button",
            "As interactive element",
            "Inside text content"
          ]
        },
        "whiteCurvedShape": {
          "type": "Organic curved background element",
          "fill": "#FFFFFF",
          "stroke": "none",
          "usage": [
            "Background decoration",
            "Layering element behind content cards"
          ],
          "zIndex": "Behind content cards but above page background",
          "doNotUse": [
            "As card container",
            "As clickable element",
            "With shadow"
          ]
        }
      },
      "logo": {
        "structure": "Icon + text lockup",
        "iconColors": {
          "grid": "#009639",
          "description": "Green grid pattern represents solar panels"
        },
        "textColor": "#2B2B2B",
        "layout": "Icon left, text right",
        "spacing": "8px between icon and text",
        "minSize": "120px width minimum",
        "clearSpace": "24px on all sides",
        "doNotModify": [
          "color combinations",
          "icon proportions",
          "spacing ratio"
        ]
      },
      "imageContainers": {
        "heroImage": {
          "aspectRatio": "16:9 or wider",
          "objectFit": "cover",
          "position": "Right side of card or full background",
          "overlayTreatment": "Partial white gradient overlay on left for text readability",
          "quality": "High resolution solar panel photography",
          "doNotApply": {
            "filterToImage": "NO filters, color overlays (except specified gradient), or opacity changes to base image",
            "borderToImage": "Borders and radius apply to container, not image element",
            "greenTintToImage": "Green accent is separate element, NOT image overlay"
          }
        }
      }
    },
    "layout": {
      "grid": {
        "columns": 12,
        "gutter": "24px",
        "margin": "32px on desktop, 16px on mobile",
        "maxWidth": "1440px",
        "breakpoints": {
          "mobile": "320px-767px",
          "tablet": "768px-1023px",
          "desktop": "1024px+"
        }
      },
      "composition": {
        "heroSection": {
          "structure": "Full-width card with asymmetric content layout",
          "contentZone": "Left 50-60% with gradient overlay",
          "visualZone": "Right 40-50% showing image at full saturation",
          "accentElement": "Green vertical bar between zones",
          "layering": "Background image → White curved decorative shape → Content card with gradient → Green accent bar"
        }
      }
    },
    "effects": {
      "borderRadius": {
        "small": "4px",
        "appliedTo": ["buttons", "input fields", "small cards"]
      },
      "medium": {
        "value": "8px",
        "appliedTo": ["standard cards", "decorative bars", "image containers"]
      },
      "large": {
        "value": "12px",
        "appliedTo": ["hero cards", "main content containers", "modals"]
      },
      "transitions": {
        "default": {
          "duration": "0.2s",
          "timing": "ease",
          "appliedTo": ["hover states", "focus states", "color changes"]
        },
        "lift": {
          "duration": "0.3s",
          "timing": "ease-out",
          "properties": ["transform", "box-shadow"],
          "appliedTo": ["card hover effects", "button interactions"]
        }
      }
    },
    "imagery": {
      "photoStyle": {
        "subject": "Solar panel installations, renewable energy equipment",
        "lighting": "Natural, warm tones during golden hour preferred",
        "composition": "Wide shots showing scale and sky",
        "colorTreatment": "Natural colors, no heavy filters",
        "perspective": "Slightly elevated angle showing panels and horizon"
      },
      "overlayStrategy": {
        "whenToUse": "When text needs to sit over photos",
        "type": "Gradient from opaque white to semi-transparent",
        "direction": "Left to right (content area to image area)",
        "intensityRange": "0.75-0.95 opacity on white"
      }
    },
    "brandGuidelines": {
      "primaryBrandColor": "#009639",
      "brandColorUsage": {
        "correct": [
          "Accent decorative elements",
          "Logo icon",
          "Call-to-action highlights",
          "Geometric shapes"
        ],
        "incorrect": [
          "Large background areas",
          "Text color",
          "Image overlays",
          "Shadows",
          "Border colors"
        ]
      },
      "logoUsage": {
        "placement": "Top right corner of documents/presentations",
        "minSize": "120px width",
        "clearSpace": "24px minimum on all sides",
        "doNotModify": "Colors, proportions, or element arrangement"
      }
    },
    "commonMistakes": {
      "gradientMisapplication": [
        "DO NOT apply card gradient overlay to entire card background",
        "DO NOT use gradient on buttons or icons",
        "DO NOT apply gradient to text elements",
        "Gradient is ONLY for content overlay on photo backgrounds"
      ],
      "colorMisapplication": [
        "DO NOT use primary green (#009639) for text",
        "DO NOT use primary green for button backgrounds",
        "DO NOT use primary green for card backgrounds",
        "DO NOT apply primary green as image filter/overlay",
        "Primary green is ONLY for accent bars and logo icon"
      ],
      "shadowMisapplication": [
        "DO NOT add shadow to images directly",
        "DO NOT add shadow to text elements",
        "DO NOT add shadow to decorative bars",
        "Shadows ONLY on card containers and floating elements"
      ],
      "structuralMistakes": [
        "DO NOT place text directly on images without gradient overlay",
        "DO NOT use decorative bar as card border",
        "DO NOT make decorative elements interactive",
        "DO NOT apply card styling to decorative shapes"
      ]
    },
    "accessibilityRequirements": {
      "contrastRatios": {
        "textOnLight": "Minimum 7:1 (dark gray #2B2B2B on white)",
        "textOnDark": "Minimum 4.5:1 (white on dark gray)",
        "interactiveElements": "Minimum 3:1 contrast for focus indicators"
      },
      "focusStates": {
        "outline": "2px solid #009639",
        "outlineOffset": "2px",
        "appliedTo": ["buttons", "links", "interactive cards"]
      },
      "textSizing": {
        "minimum": "14px",
        "body": "16px",
        "scalable": "All text must scale up to 200% without breaking layout"
      }
    },
    "implementationNotes": {
      "cssCustomProperties": {
        "colors": {
          "--brand-green": "#009639",
          "--text-dark": "#2B2B2B",
          "--text-medium": "#666666",
          "--background-light": "#F5F5F5",
          "--white": "#FFFFFF"
        },
        "shadows": {
          "--shadow-card": "0 4px 16px rgba(0, 0, 0, 0.08)",
          "--shadow-subtle": "0 2px 8px rgba(0, 0, 0, 0.05)",
          "--shadow-hover": "0 6px 20px rgba(0, 0, 0, 0.12)"
        },
        "spacing": {
          "--space-xs": "4px",
          "--space-sm": "8px",
          "--space-md": "16px",
          "--space-lg": "24px",
          "--space-xl": "32px",
          "--space-xxl": "48px"
        },
        "radius": {
          "--radius-sm": "4px",
          "--radius-md": "8px",
          "--radius-lg": "12px"
        }
      },
      "componentHierarchy": {
        "layerOrder": [
          "Base background (white or light gray)",
          "Decorative background shapes (white curved element)",
          "Photo backgrounds",
          "Gradient overlays (on photos)",
          "Content cards (with shadow)",
          "Decorative accent bars (green)",
          "Text content",
          "Interactive elements (buttons, links)"
        ]
      }
    }
  }
}
